<Button
    x:Class="DoImageViewer.App.Controls.PathButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DoImageViewer.App.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=local:PathButton}"
    d:DesignHeight="40"
    d:DesignWidth="40"
    mc:Ignorable="d">

    <Button.Style>
        <Style TargetType="Button">
            <!--  基础属性  -->
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="{StaticResource PathButtonForegroundBrush}" />
            <Setter Property="Padding" Value="6" />
            <Setter Property="Width" Value="32" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />

            <!--  控件模板  -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                            <ContentPresenter
                                x:Name="contentPresenter"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                Focusable="False" />
                        </Border>

                        <!--  交互触发器  -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource PathButtonHoverBackgroundBrush}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource PathButtonPressedBackgroundBrush}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Button.Style>

    <!--  Path内容  -->
    <Path
        Cursor=""
        Data="{Binding RelativeSource={RelativeSource AncestorType=local:PathButton}, Path=Data}"
        Fill="{Binding RelativeSource={RelativeSource AncestorType=local:PathButton}, Path=Foreground}"
        Stretch="{Binding RelativeSource={RelativeSource AncestorType=local:PathButton}, Path=Stretch}"
        Stroke="{Binding RelativeSource={RelativeSource AncestorType=local:PathButton}, Path=Stroke}"
        StrokeThickness="{Binding RelativeSource={RelativeSource AncestorType=local:PathButton}, Path=StrokeThickness}" />
</Button>
