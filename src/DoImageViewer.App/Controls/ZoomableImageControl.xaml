<UserControl
    x:Class="DoImageViewer.App.Controls.ZoomableImageControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:DoImageViewer.App.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:DoImageViewer.App.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Loaded="OnUserControlLoaded"
    mc:Ignorable="d">
    <ScrollViewer
        x:Name="scrollViewer"
        HorizontalScrollBarVisibility="Auto"
        PanningMode="Both"
        VerticalScrollBarVisibility="Auto">
        <Canvas
            x:Name="ImageCanvas"
            Background="{StaticResource CheckerboardBrush}"
            MouseWheel="OnImageCanvasMouseWheel">
            <Image
                x:Name="ImageElement"
                MouseLeftButtonDown="OnImageMouseLeftButtonDown"
                MouseLeftButtonUp="OnImageElementMouseLeftButtonUp"
                MouseMove="OnImageElementMouseMove"
                RenderOptions.BitmapScalingMode="HighQuality">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform x:Name="scaleTransform" CenterX="0" CenterY="0" />
                        <TranslateTransform x:Name="translateTransform" />
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
        </Canvas>
    </ScrollViewer>
</UserControl>