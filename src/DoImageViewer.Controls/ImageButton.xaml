<Button
    x:Class="DoImageViewer.Controls.ImageButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converts="clr-namespace:DoImageViewer.Controls.Converts"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DoImageViewer.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:svg="http://sharpvectors.codeplex.com/svgc/"
    d:DataContext="{d:DesignInstance Type=local:ImageButton}"
    d:DesignHeight="40"
    d:DesignWidth="40"
    Cursor=""
    mc:Ignorable="d">
    <Button.Resources>
        <ResourceDictionary>
            <converts:FilePathToUriConverter x:Key="FilePathToUriConverter" />
        </ResourceDictionary>
    </Button.Resources>
    <Button.Style>

        <Style TargetType="Button">
            <!--  基础属性  -->
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="{StaticResource PathButtonForegroundBrush}" />
            <Setter Property="Padding" Value="6" />
            <Setter Property="Width" Value="32" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />

            <!--  控件模板  -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                            <ContentPresenter
                                x:Name="contentPresenter"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                Focusable="False" />
                        </Border>

                        <!--  交互触发器  -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource PathButtonHoverBackgroundBrush}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource PathButtonPressedBackgroundBrush}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Button.Style>
    <svg:SvgIcon
        Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=local:ImageButton}}"
        Stretch="{Binding Stretch, RelativeSource={RelativeSource AncestorType=local:ImageButton}}"
        Stroke="{Binding Stroke, RelativeSource={RelativeSource AncestorType=local:ImageButton}}"
        UriSource="{Binding Source, RelativeSource={RelativeSource AncestorType=local:ImageButton}, Converter={StaticResource FilePathToUriConverter}}" />
</Button>
